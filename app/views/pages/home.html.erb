<h1>WigglyWord</h1>
<p>A fun little game for Morrie.</p>
<% if user_signed_in? %>
  <p>You are logged in as <%= current_user.name  %></p>
  <%= link_to 'Log out', logout_path(current_user), data: { turbo_method: :delete } %><br>
<% else %>
  <p>You are not logged in.</p>
  <%= link_to "Log in", login_path, class: 'btn btn-primary' %>
  <%= link_to "Sign up", signup_path, class: 'btn btn-secondary' %>
<% end %>
